<% layout("/Layouts/boillerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
   <h3><b>Edit Your Listings</b></h3>
    <form method="POST" action="/Listings/<%=listings._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listings.title%>" class="form-control" required>
            <div class="valid-feedback">
                Tittle looks good!
            </div>  
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="30" rows="10" class="form-control" required><%= listings.description%></textarea>
            <div class="invalid-feedback">
                Please enter a short description
            </div>
        </div>
        <div>
            <label class="form-label">Original Listing Image</label>
            <div class="mb-3 img-fit">
                <img src="<%= originalImageurl %>" />
            </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" value="<%= listings.price%>" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter valid price!
                </div>
            </div>
            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" value="<%= listings.country%>" class="form-control" required>
                <div class="invalid-feedback">
                    please enter your country name!
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listings.location%>" class="form-control" required> 
            <div class="invalid-feedback">
                please enter your country name!
            </div>
        </div>
        <button class="btn btn-dark btn-lg add-btn mt-2">Edit</button>
        <br><br>
    </form>
    </div>
</div>
