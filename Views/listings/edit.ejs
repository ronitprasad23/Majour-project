<% layout("/Layouts/boillerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
   <h3><b>Edit Your Listings</b></h3>
    <form method="POST" action="/Listings/<%=listings._id%>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listings.title%>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="30" rows="10" class="form-control"><%= listings.description%></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image]" value="<%= listings.image%>" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" value="<%= listings.price%>" class="form-control">
            </div>
            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" value="<%= listings.country%>" class="form-control">
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listings.location%>" class="form-control">
        </div>
        <button class="btn btn-dark btn-lg add-btn mt-2">Edit</button>
        <br><br>
    </form>
    </div>
</div>
